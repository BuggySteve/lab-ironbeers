<div class="random-partial-container row">
  <div class="random-image col-2">
    <img src={{image_url}}>
  </div>
  <div class="random-partial-text col-8">
    <h1>{{name}}</h1>
    <p class="grey">{{tagline}}</p>
    <p>{{description}}</p>
    <h2>Food Pairing</h2>
    <ul>
      {{#each food_pairing}}
      <li>{{this}}</li>
      {{/each}}
    </ul>
    <p><span class="brewers-tips">Brewers tips:&nbsp;</span>{{brewers_tips}}</p>
  </div>
</div>